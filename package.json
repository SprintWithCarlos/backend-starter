{
  "name": "node_starter",
  "author": {
    "name": "Carlos Marchena",
    "email": "sprintwithcarlos@pm.me",
    "url": "https://sprintwithcarlos.github.io"
  },
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix",
    "lint:format": "prettier-eslint '**/*.ts' --write",
    "prepare": "husky install",
    "prebuild": "yarn test:c && rm -rf ./dist",
    "build": "tsc",
    "up": "docker-compose up -d",
    "postup": "npm run dev",
    "stop": "docker-compose stop",
    "down": "docker-compose down",
    "start": "PORT=6000 node dist/index.js",
    "dev": "NODE_ENV=dev ts-node-dev --respawn -- src/index.ts",
    "debug": "PORT=6000 node --inspect-brk dist/src.js",
    "test": "jest",
    "test:c": "jest",
    "test:w": "jest --watch --verbose --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@faker-js/faker": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "jest": "^28.1.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.1",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.4.0"
  }
}

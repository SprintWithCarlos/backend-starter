{
  "name": "node_starter",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix",
    "lint:format": "prettier-eslint '**/*.ts' --write",
    "prepare": "husky install",
    "prebuild": "yarn test && rm -rf ./dist",
    "build": "tsc && cp -R src/public dist",
    "up": "docker-compose up -d",
    "postup": "npm run dev",
    "stop": "docker-compose stop",
    "down": "docker-compose down",
    "start": "node dist/server.js",
    "dev": "NODE_ENV=dev ts-node-dev --respawn -- src/server.ts",
    "debug": "PORT=6000 node --inspect-brk dist/src.js",
    "test": "NODE_ENV=prod PORT=4000 jest",
    "test:w": "PORT=4000 jest --watch --verbose --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@faker-js/faker": "^7.1.0",
    "bcrypt": "^5.0.1",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.0",
    "ioredis": "^5.0.6",
    "jest": "^28.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.6.0",
    "mongoose": "^6.3.6",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.5",
    "qrcode": "^1.5.0",
    "stripe": "^9.8.0",
    "supertest": "^6.2.3",
    "swagger-ui-express": "^4.4.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^6.6.9",
    "@types/hapi": "^18.0.7",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/module-alias": "^2.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/nodemailer": "^6.4.4",
    "@types/qrcode": "^1.4.2",
    "@types/stripe": "^8.0.417",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.1",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.4.0"
  }
}
